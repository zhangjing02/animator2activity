        <activity
            android:name=".motion.creative.CreativeCustomizationActivity"
            android:theme="@style/AppTheme.NoActionBar.Detail" />
        <activity
            android:name=".pattern.loadingimages.LoadingImagesActivity"
            android:theme="@style/AppTheme.NoActionBar.Detail" />
        <activity
            android:name=".pattern.transition.NavigationalTransitionActivity"
            android:theme="@style/AppTheme.NoActionBar.Detail" />
        <activity
            android:name=".pattern.transition.ChildActivity"
            android:theme="@style/AppTheme.NoActionBar.NavigationalTransition" />


