<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dynamic_durations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.takahirom.materialelement.motion.durationeasing.DurationAndEasingActivity">
    <!-- tools:showIn="@layout/activity_dynamic_durations" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.takahirom.materialelement.view.QuoteLayout
            android:text="@string/duration_easing_abstract"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:listDivider" />

        <TextView
            android:id="@+id/dynamic_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginRight="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:text="@string/duration_easing_duration_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_large_32dp"
            android:text="@string/duration_easing_duration_long"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/duration_fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:text="@string/duration_easing_duration_short"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/duration_fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/easing_carve_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginRight="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_large_32dp"
            android:text="@string/duration_easing_easing_curves_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_large_32dp"
            android:text="@string/duration_easing_standard_curve"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/curve_standard_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:text="@string/duration_easing_deceleration_curve"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/curve_deceleration_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:text="@string/duration_easing_acceleration_curve"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/curve_acceleration_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:text="@string/duration_easing_sharp_curve"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/curve_sharp_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large_32dp"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:layout_marginTop="@dimen/spacing_normal_8dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:color/transparent" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
